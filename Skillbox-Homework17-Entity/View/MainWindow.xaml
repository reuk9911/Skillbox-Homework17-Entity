<Window x:Class="Skillbox_Homework17_Entity.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skillbox_Homework17_Entity.View"
        xmlns:vm="clr-namespace:Skillbox_Homework17_Entity.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:DataManageVM/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <!-- ClientsGrid -->
        <DataGrid 
            Grid.Column="0" 
            Margin="5" 
            ItemsSource="{Binding AllClients}"
            SelectionMode="Single" 
            AutoGenerateColumns="False"
            SelectedItem="{Binding SelectedItem}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Email" Binding="{Binding email}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding lastName}"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding firstName}"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding middleName}"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding phone}"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- *** ClientsGrid *** -->

        <!--PurchasesGrid-->
        <DataGrid 
            Grid.Column="1" 
            Margin="5" 
            ItemsSource="{Binding AllPurchases}"
            SelectionMode="Single" 
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                
                <DataGridTextColumn Header="Id" Binding="{Binding id}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding email}"/>
                <DataGridTextColumn Header="Код" Binding="{Binding productCode}"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding productName}"/>
            </DataGrid.Columns>
            
        </DataGrid>
        <!-- *** PurchasesGrid *** -->

        <StackPanel 
            Grid.Column="2" 
            Margin="5"
            Orientation="Vertical">
            <Button 
                Content="Добавить Клиента" 
                Command="{Binding OpenAddNewClientWind}"/>
            <Button 
                Content="Добавить Покупку" 
                Command="{Binding OpenAddNewPurchaseWind}"/>
        </StackPanel>
    </Grid>
</Window>
